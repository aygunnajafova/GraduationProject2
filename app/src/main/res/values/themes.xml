<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GraduationProject2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GraduationProject2" parent="Base.Theme.GraduationProject2" />

    <!--My Styles-->
    <style name="LoginButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:radius">85dp</item>
        <item name="android:backgroundTint">#000</item>
    </style>

    <style name="TabLayoutText" parent="Widget.Design.TabLayout">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TabLayoutBG" parent="Widget.Design.TabLayout">
        <item name="android:background">@null</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorColor">#5d90d8</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/light_gray</item>
    </style>

    <style name="SingleCardButton" parent="TextAppearance.AppCompat.Button">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CornerRadius" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>


</resources>